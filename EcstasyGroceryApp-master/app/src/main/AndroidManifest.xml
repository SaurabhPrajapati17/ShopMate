<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ecstasygroceryapp">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".Seller.Activities.AddPromotionCodeActivity"></activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Theme.EcstasyGroceryApp" />
        <activity
            android:name=".Seller.Activities.OrderDetailsSellerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".User.Activities.ShopReviewActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".User.Activities.WriteReviewActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".User.Activities.OrderDetailsUserActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".User.Activities.ShopInfoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".User.Activities.ShopDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Seller.Activities.EditProductActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Seller.Activities.DashboardSellerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".User.Activities.SellOnEcstasyActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".User.Activities.DashboardUserActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CommonActivities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CommonActivities.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".MyFirebaseMessaging">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>